<head>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">

</head>
<div class="container text-center border border-primary mt-4 rounded" style="width: 15%;">
    <div class="row justify-content-md-center">
        <div class="d-flex flex-column">
            <div>

                <h3>
                    <%= `Editing ${todo.todo}` %>
                </h3>
            </div>
            <form action="/todos/<%=todo.id %>?_method=PUT" method="post" class="d-flex flex-column">
                <div class="form-group mb-2">
                    <label for="exampleInputEmail1">To-do</label>
                    <input name= "todo"type="text" class="form-control" id="exampleInputEmail1" placeholder="<%= todo.todo %> ">
                </div>
                <div class="form-group d-flex text-left mt-2 mb-2">
                    <input class="form-check-input" type="checkbox" value="true" name="done" >
                    <label class="margin-left-2 " for="defaultCheck1">
                        Done?
                    </label>
                </div>
                <button type="submit" class="btn btn-outline-primary">Submit</button>
            </form>
        </div>
    </div>
</div>
